{
  "schemaVersion": 1,
  "id": "microcraft",
  "version": "v0.0.1alpha01",

  "name": "Microcraft",
  "description": "A mod that allows for communication between the Minecraft client and microcontrollers and singleboard computers, allowing for ingame triggers of actions.",
  "authors": [
    "Jonas_Jones"
  ],
  "contact": {
    "homepage": "https://jonasjones.me/microcraft",
    "sources": "https://github.com/J-onasJones/microcraft",
    "issues": "https://github.com/J-onasJones/microcraft/issues"
  },

  "license": "CC0-1.0",
  "icon": "assets/microcraft/textures/gui/button_icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "me.jonasjones.microcraft.Microcraft"
    ]
  },
  "mixins": [
    "microcraft.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.com/invite/V2EsuUVmWh"
      }
    }
  }
